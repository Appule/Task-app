<header class="navbar navbar-fixed-top navbar-default" style="background-color:teal">
  <div class="container tab">
    <%= link_to "Task App", root_path, id: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "トップ", root_path, class: "tab"%></li>
        <% if logged_in? %>
          <li><%= link_to "ユーザー", '#', class: "tab"%></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle tab" data-toggle="dropdown" id="dropdown-active">
              <%= @user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Show", current_user %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path, class: "tab" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
